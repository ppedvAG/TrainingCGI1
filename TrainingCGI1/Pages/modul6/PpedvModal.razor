@if (IsShow)
{
<div class="modal fade show"  tabindex="-1"  style="display: block; " 
    >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" >@Titel</h5>
                <button type="button" class="close" @onclick="Show" >
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
               @ChildContent
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary"  @onclick="Show" >Close</button>
                <button type="button" class="btn btn-primary" @onclick="()=>OnSave?.Invoke()">Save changes</button>
            </div>
        </div>
    </div>
</div>
<div class="modal-backdrop fade show"></div>
}
@code {
    bool IsShow;
    [Parameter]
    public string Titel { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public Action OnSave { get; set; }

    public void Show()
    {
        IsShow = !IsShow;
        StateHasChanged();
    }
}
