@page "/wt"
<h3>Wochentage</h3>
<div class="row">
    <div class="col">
        <ul class="list-group">
            <li class="list-group-item active" aria-current="true">Wochentage</li>
            @for (int i = 0; i < 7; i++)
            {
                int x = i;
                <li class="list-group-item list-group-item-action" @onclick="()=>auswahl(x)">
                    @DateTime.Now.AddDays(i).ToString("dddd")
                </li>
            }
        </ul>
    </div>

</div>
<h1>@Tagauswahl</h1>

@code {
    public string Tagauswahl { get; set; }

    void auswahl(int ii)
    {

        Tagauswahl = DateTime.Now.AddDays(ii).ToString("dddd");
    }

}
